{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": "off",
    "linebreak-style": "off",
    "max-len": "off",
    "no-underscore-dangle": "off",
    "no-undef": "off",
    "no-alert": "off",
    "object-curly-newline": "off",
    "comma-dangle": "off",
    "indent": "off",
    "no-console": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off"
  }
}
